<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.trippedout.android.shadercamerasamples" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ChooserActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="Camera Only"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LipServiceActivity"
            android:label="@string/activity_name_lip_service"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DepthBlurActivity"
            android:label="Depth Blur"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
